@model IEnumerable<TextEditor.Models.DocumentModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-center align-items-center" style="width:150px; height:200px; background-color: #daeeef; font-size:100px;">
    <a style="text-decoration:none; color: #5cc0c4;" asp-action="Create">+</a>
</div>
<span style="font-weight:bold;">Blank Document</span>

<hr />

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-2">
            <div class="d-flex justify-content-center align-items-center" style="width:150px; height:200px; background-color: lightblue; font-size:100px;">
                <a style="text-decoration:none; color: black;" asp-action="Edit" asp-route-id="@item.Id">📃</a>
            </div>
            <span style="font-weight:bold;">@item.Title</span>
        </div>
    }
</div>